{
  "name": "marqua",
  "author": "Ignatius Bagus",
  "description": "Augmented Markdown Compiler",
  "version": "0.3.0",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "clean": "git add * && git clean -dfx -e node_modules",
    "lint": "npm run lint:code && npm run lint:style && npm run lint:types",
    "lint:code": "tsc --noEmit",
    "lint:style": "prettier -c src test",
    "lint:types": "touch index.d.ts && tsd",
    "test": "npm run test:core && npm run test:apps",
    "test:core": "uvu -r tsm src \"(spec\\.ts)\"",
    "test:apps": "uvu -r tsm test/apps \"(spec\\.ts)\"",
    "pub:build": "tsc --declaration",
    "pub:format": "prettier -wu **/*.{d.ts,js}",
    "prepublishOnly": "npm run pub:build && npm run pub:format"
  },
  "prettier": "mauss/prettier.json",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ignatiusmb/marqua.git"
  },
  "bugs": {
    "url": "https://github.com/ignatiusmb/marqua/issues"
  },
  "keywords": [
    "markdown",
    "compiler",
    "parser"
  ],
  "dependencies": {
    "@ignatiusmb/aqua": "^20.3.3",
    "markdown-it": "^12.0.4",
    "mauss": "^0.2.2"
  },
  "devDependencies": {
    "@types/markdown-it": "^12.0.1",
    "@types/node": "^17.0.17",
    "prettier": "^2.3.0",
    "tsd": "^0.19.1",
    "tsm": "^2.2.1",
    "typescript": "^4.1.2",
    "uvu": "^0.5.3"
  },
  "tsd": {
    "directory": "test/typings"
  }
}
